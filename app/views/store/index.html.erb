<p id="notice"><%= notice %></p>

<h1>The catalog</h1>

<% @products.each do |p| %>
  <div class="entry">
    <%= image_tag p.image_url %>
    <h3><%= p.title %></h3>
    <%= sanitize p.description %>
    <div class="price-line">
      <span class="price"><%= p.price %></span>
    </div>
  </div>
<% end %>
